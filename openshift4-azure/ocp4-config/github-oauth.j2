apiVersion: config.openshift.io/v1
kind: OAuth
metadata:
  name: cluster
spec:
  identityProviders:
    - github:
        clientID: {{ github_oauth_clientid }}
        clientSecret:
          name: github-oauth
        organizations: []
        teams:
          - {{ github_oauth_teams }}
      mappingMethod: claim
      name: github
      type: GitHub